PORT=3000
JWT_SECRET=please-change-me
ROOT_USERNAME=root
ROOT_PASSWORD=root123
MAX_UPLOAD_SIZE_BYTES=1073741824

# 播放池（本地缓存）配置
PLAY_POOL_DIR=playback_pool
PLAY_POOL_MAX_BYTES=10737418240
TEMP_UPLOAD_DIR=uploads_tmp

# 可选：限制 server_path 导入的根目录
REMOTE_SOURCE_ROOT=

# 统一压缩转码（建议保持 true，所有新入库视频统一输出 MP4 H264/AAC）
ENABLE_TRANSCODE=true
FFMPEG_PATH=ffmpeg
TRANSCODE_VIDEO_CODEC=libx264
TRANSCODE_AUDIO_CODEC=aac
TRANSCODE_PRESET=veryfast
# 留空则使用 CRF 码控；设置如 1800k 则走固定码率
TRANSCODE_VIDEO_BITRATE=
TRANSCODE_AUDIO_BITRATE=96k
TRANSCODE_CRF=28
TRANSCODE_MAX_WIDTH=1280
# 可选硬件加速: cuda / qsv / videotoolbox
TRANSCODE_HWACCEL=
# 当硬件编码失败时回退 CPU libx264
TRANSCODE_FALLBACK_CPU=true

# 房间同步参数
SYNC_DRIFT_SOFT_THRESHOLD_MS=200
SYNC_DRIFT_HARD_THRESHOLD_MS=1200
AUTOPLAY_COUNTDOWN_SECONDS=8

# 阿里云 OSS（可选）
OSS_REGION=
OSS_BUCKET=
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_ENDPOINT=
OSS_STS_TOKEN=
OSS_PREFIX=videos/
